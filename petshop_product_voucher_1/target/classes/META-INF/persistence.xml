<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="petshopPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Liệt kê entity classes để đảm bảo Hibernate nhận diện chúng -->
        <class>com.petshop.model.ProductCategory</class>
        <class>com.petshop.model.Product</class>
        <class>com.petshop.model.Promotion</class>
        <class>com.petshop.model.Item</class>
        <class>com.petshop.model.Account</class>
        <class>com.petshop.model.User</class>
        <class>com.petshop.model.Pet</class>

        <properties>
            <!-- JDBC connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://DESKTOP-0AN9F32:1433;databaseName=PETSHOP;encrypt=true;trustServerCertificate=true;"/>
            <property name="jakarta.persistence.jdbc.user" value="PETSHOP"/>
            <property name="jakarta.persistence.jdbc.password" value="petshop"/>

            <!-- Hibernate / JPA provider properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Disable automatic schema updates to avoid system metadata queries requiring elevated permissions -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <!-- Prevent Hibernate from probing JDBC metadata defaults (reduces metadata queries) -->
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>

            <!-- Tùy chọn quét tự động (nếu cần) -->
            <property name="hibernate.archive.autodetection" value="class"/>
        </properties>
    </persistence-unit>
</persistence>
